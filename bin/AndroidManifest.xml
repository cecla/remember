<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.pp.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.pp.PopUp"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">

        </activity>
        
        <service
            android:name="com.example.pp.MyAlarmService"
            android:enabled="true"
            />
        
        <receiver android:name="com.example.pp.MyReceiver" />
        
        <service android:name="com.example.pp.MyAlarmService" />
        
        <receiver
            android:name="com.example.pp.AlarmReceiver1"
            android:process=":remote">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
        	</intent-filter>
        </receiver>
        
                <receiver
            android:name="com.example.pp.Snooze"
            android:process=":remote">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
        	</intent-filter>
        </receiver>
        
    </application>

</manifest>
